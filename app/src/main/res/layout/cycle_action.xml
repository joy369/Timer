<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/default_action_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/r_action_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="52dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="52dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="82dp"
                android:text="unit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/r_action_time"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/r_action_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="100dp"
                android:layout_marginStart="26dp"
                android:gravity="center"
                android:hint="10"
                android:inputType="numberDecimal"
                android:maxLength="2"
                android:maxLines="1"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/r_item_unit"
                app:layout_constraintTop_toBottomOf="@+id/r_action_comment"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/r_item_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="152dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="152dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="84dp"
                android:text="item(s)"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/r_item_num"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/r_item_num"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="69dp"
                android:gravity="center"
                android:hint="0"
                android:inputType="numberDecimal"
                android:maxLength="2"
                android:maxLines="1"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/r_action_comment"
                app:layout_constraintStart_toEndOf="@+id/r_action_image"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/r_action_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="34dp"
                android:layout_marginEnd="86dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="86dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="26dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/r_action_comment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <TextView
                android:id="@+id/r_action_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="166dp"
                android:layout_marginLeft="95dp"
                android:layout_marginRight="166dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/r_action_comment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/r_action_image"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/r_action_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginEnd="112dp"
                android:layout_marginLeft="86dp"
                android:layout_marginRight="112dp"
                android:layout_marginStart="86dp"
                android:gravity="center"
                android:hint="Add description"
                android:maxLines="1"
                android:text="Comment"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/r_action_name" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>